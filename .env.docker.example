# Docker Environment Configuration
# Copy to .env.docker for Docker deployment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="MindDeck Clone"
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# AI PROVIDER API KEYS
# =============================================================================
OPENAI_API_KEY=sk-proj-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=AIza...
XAI_API_KEY=xai-...
DEEPSEEK_API_KEY=sk-...

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
API_SECRET_KEY=your-super-secret-api-key-32-characters-long
JWT_SECRET=your-jwt-secret-key-32-characters-long
ENCRYPTION_KEY=your-encryption-key-32-characters-long

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
POSTGRES_USER=minddeck
POSTGRES_PASSWORD=secure-postgres-password
DATABASE_URL=postgresql://minddeck:secure-postgres-password@postgres:5432/minddeck

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_PASSWORD=secure-redis-password
REDIS_URL=redis://:secure-redis-password@redis:6379

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
GRAFANA_PASSWORD=secure-grafana-password

# =============================================================================
# CRON SETTINGS
# =============================================================================
CRON_SECRET=your-cron-secret-key