# Environment Configuration Template
# Copy to .env.local for local development
# Configure in Vercel Dashboard for production

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://minddeck-clone.vercel.app
NEXT_PUBLIC_APP_NAME="MindDeck Clone"
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# AI PROVIDER API KEYS (Required)
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-...
OPENAI_ORG_ID=org-...
OPENAI_PROJECT_ID=proj_...

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini Configuration
GOOGLE_API_KEY=AIza...
GOOGLE_PROJECT_ID=your-project-id

# xAI Configuration
XAI_API_KEY=xai-...

# DeepSeek Configuration
DEEPSEEK_API_KEY=sk-...

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API Security
API_SECRET_KEY=your-super-secret-key-here
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Settings
ALLOWED_ORIGINS=https://minddeck-clone.vercel.app,http://localhost:3000

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Vercel Analytics
VERCEL_ANALYTICS_ID=your-analytics-id

# Sentry Error Tracking
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ORG=your-org
SENTRY_PROJECT=minddeck-clone

# LogRocket Session Replay
LOGROCKET_APP_ID=your-app-id

# PostHog Analytics
POSTHOG_KEY=phc_...
POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Redis for Caching (Optional)
REDIS_URL=redis://...

# Database (Optional)
DATABASE_URL=postgresql://...

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Bundle Analysis
ANALYZE=false

# Debug Modes
DEBUG_API=false
DEBUG_CHAT=false
DEBUG_MODELS=false

# Feature Flags
FEATURE_FLAG_MCP_SERVERS=true
FEATURE_FLAG_INCOGNITO_MODE=true
FEATURE_FLAG_VOICE_INPUT=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# API Timeouts (milliseconds)
API_TIMEOUT=30000
STREAMING_TIMEOUT=60000

# Cache Settings
CACHE_TTL=3600
STATIC_CACHE_TTL=31536000

# Model Settings
DEFAULT_MODEL=gpt-4
MAX_TOKENS=4000
TEMPERATURE=0.7