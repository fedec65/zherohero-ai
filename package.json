{
  "name": "minddeck-clone",
  "version": "1.0.0",
  "private": true,
  "description": "Advanced AI chat interface supporting multiple AI models",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "ANALYZE=true npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:lighthouse": "lhci autorun",
    "security:audit": "npm audit --audit-level high",
    "security:check": "npm run security:audit && npm run lint:security",
    "lint:security": "eslint . --ext .ts,.tsx --config .eslintrc.security.js",
    "build:analyze": "ANALYZE=true npm run build",
    "postbuild": "next-sitemap",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "validate": "npm run type-check && npm run lint && npm run test",
    "deploy:staging": "vercel --env staging",
    "deploy:production": "vercel --prod",
    "deploy:check": "npm run type-check && npm run lint && npm run build",
    "vercel-build": "next build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.1",
    "@google/generative-ai": "^0.2.1",
    "@headlessui/react": "^1.7.18",
    "@types/react-window": "^1.8.8",
    "@vercel/analytics": "^1.2.2",
    "@vercel/speed-insights": "^1.0.10",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "framer-motion": "^11.0.3",
    "immer": "^10.1.1",
    "lucide-react": "^0.323.0",
    "nanoid": "^5.0.4",
    "next": "^14.1.0",
    "openai": "^4.26.0",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.6.6",
    "react-use": "^17.5.0",
    "react-window": "^1.8.11",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "use-debounce": "^10.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.41.2",
    "@sentry/nextjs": "^7.101.1",
    "@sentry/webpack-plugin": "^2.14.1",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "@types/react-dom": "^18.2.18",
    "@types/react-syntax-highlighter": "^15.5.11",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.2",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "wait-on": "^8.0.4",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
